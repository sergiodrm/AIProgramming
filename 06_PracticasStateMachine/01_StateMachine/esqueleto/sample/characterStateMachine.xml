<sm>
    <states>
        <!-- Idle -->
        <state>
            <enter action="SetImage" image="Idle"/>
        </state>

        <!-- Chase -->
        <state>
            <enter action="SetImage" image="Alarm"/>
            <loop action="Chase"/>
        </state>

        <!-- Attack -->
        <state>
            <enter action="SetImage" image="Attack"/>
            <loop action="Attack" damage="30" time="2"/>
        </state>
    </states>

    <transitions>
        <transition origin="0" dest="1">
            <condition cond="And">
                <condition cond="CheckDist" dist="500"/>
                <condition cond="Alive"/>
            </condition>
        </transition>
        <transition origin="1" dest="0">
            <condition cond="Or">
                <condition cond="Not">
                    <condition cond="CheckDist" dist="500">
                </condition>
                <condition cond="Not">
                    <condition cond="Alive">
                </condition>
            </condition>
        </transition>

        <transition origin="1" dest="2">
            <condition cond="And">
                <condition cond="CheckDist" dist="100">
                <condition cond="Alive"/>
            </condition>
        </transition>
        <transition origin="2" dest="1">
            <condition cond="Or">
                <condition cond="Not">
                    <condition cond="CheckDist" dist="100">
                </condition>
                <condition cond="Not">
                    <condition cond="Alive">
                </condition>
            </condition>
        </transition>

    </transitions>
</sm>